<%layout("layout/placement/boilerplate.ejs") %>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <!-- Form Header -->
                    <div class="card-header bg-white border-0 py-4 text-center">
                        <div class="bg-primary bg-opacity-10 d-inline-flex p-3 rounded-circle mb-3">
                            <i class="fas fa-laptop-code text-primary fs-3"></i>
                        </div>
                        <h2 class="h3 mb-1 fw-bold">Hackathon Registration</h2>
                        <p class="text-muted mb-0">Fill out the form to register your hackathon event</p>
                    </div>

                    <!-- Form Body -->
                    <div class="card-body p-4 p-md-5">
                        <form id="hackathonForm" action="/hackathon/add" method="POST" class="needs-validation" novalidate>
                            <!-- Title Field -->
                            <div class="mb-4">
                                <label for="title" class="form-label fw-bold">Hackathon Title <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-heading text-muted"></i></span>
                                    <input type="text" class="form-control border-start-0" id="title" name="title" required
                                        placeholder="Enter hackathon title">
                                </div>
                                <small class="text-muted">Make it catchy and descriptive</small>
                            </div>

                            <!-- Date Field -->
                            <div class="mb-4">
                                <label for="date" class="form-label fw-bold">Event Date <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="far fa-calendar-alt text-muted"></i></span>
                                    <input type="datetime-local" class="form-control border-start-0" id="date" name="date" required>
                                </div>
                            </div>

                            <!-- Type Field -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Event Type <span class="text-danger">*</span></label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="type" id="onlineType" value="Online" checked>
                                    <label class="btn btn-outline-primary" for="onlineType">
                                        <i class="fas fa-globe me-2"></i> Online
                                    </label>
                                    
                                    <input type="radio" class="btn-check" name="type" id="offlineType" value="Offline">
                                    <label class="btn btn-outline-primary" for="offlineType">
                                        <i class="fas fa-map-marker-alt me-2"></i> Offline
                                    </label>
                                </div>
                            </div>

                            <!-- Venue Field -->
                            <div class="mb-4" id="venueField" style="display: none;">
                                <label for="venue" class="form-label fw-bold">Venue Details <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-building text-muted"></i></span>
                                    <input type="text" class="form-control border-start-0" id="venue" name="venue"
                                        placeholder="Enter venue address">
                                </div>
                                <small class="text-muted">Include full address with city and country</small>
                            </div>

                            <!-- Theme Field -->
                            <div class="mb-4">
                                <label for="theme" class="form-label fw-bold">Theme <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-palette text-muted"></i></span>
                                    <input type="text" class="form-control border-start-0" id="theme" name="theme" required
                                        placeholder="Enter hackathon theme">
                                </div>
                                <small class="text-muted">E.g., 'Sustainability', 'AI for Good', 'FinTech Innovation'</small>
                            </div>

                            <!-- Skills Field -->
                            <div class="mb-4">
                                <label for="skills" class="form-label fw-bold">Skills <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="skills" name="skills" required
                                    placeholder="Enter required skills (comma separated)">
                                <small class="text-muted">E.g., HTML, React, DSA, AI-ML</small>
                            </div>

                            <!-- Group Members -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Team Size <span class="text-danger">*</span></label>
                                <div class="d-flex align-items-center">
                                    <span class="me-2">1</span>
                                    <input type="range" class="form-range flex-grow-1 mx-3" min="1" max="5" value="1" 
                                        id="groupRange" name="group_member"
                                        oninput="document.getElementById('groupValue').textContent = this.value">
                                    <span class="ms-2">5</span>
                                    <span id="groupValue" class="badge bg-primary ms-3 fs-6">1</span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mt-5">
                                <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold">
                                    <i class="fas fa-paper-plane me-2"></i> Submit Hackathon
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/form_valid.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toggle venue field based on event type
            const offlineRadio = document.getElementById('offlineType');
            const venueField = document.getElementById('venueField');
            const venueInput = document.getElementById('venue');

            function toggleVenueField() {
                if (offlineRadio.checked) {
                    venueField.style.display = 'block';
                    venueInput.required = true;
                } else {
                    venueField.style.display = 'none';
                    venueInput.required = false;
                }
            }

            // Event listeners
            document.getElementById('onlineType').addEventListener('change', toggleVenueField);
            offlineRadio.addEventListener('change', toggleVenueField);
        });
    </script>
</body>
</html>