<%layout("layout/placement/boilerplate.ejs")%>
<body class="bg-light">
    <!-- Hero Section -->
    <header class="bg-white shadow-sm">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-5 fw-bold mb-3">Placement Drive Question Bank</h1>
                    <p class="lead text-muted mb-4">Master your technical interviews with curated questions from top tech companies</p>
                    
                    <div class="row g-3 justify-content-center">
                        <div class="col-md-8">
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" id="tagSearchInput" class="form-control border-start-0 ps-0" placeholder="Search by tags (e.g., array, tree, sorting)...">
                                <button class="btn btn-outline-primary d-flex align-items-center" onclick="searchByTag()">
                                    <i class="fas fa-search me-2"></i> Search Tags
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container my-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
            <div>
                <h2 class="h4 fw-bold mb-0"><span id="questionCount"><%= allQuestion.length %></span> Technical Questions</h2>
                <p class="text-muted small mb-0" id="searchStatus">Showing all questions</p>
            </div>
            <div>
                <%if(currentUser && currentUser.role==="admin"){%>
                <a href="/dsa/addquestion" class="btn btn-primary px-4">
                    <i class="fas fa-plus me-2"></i>Add Question
                </a>
                <%}%>
            </div>
        </div>

        <!-- Questions Table -->
        <div class="card shadow-sm border-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Question</th>
                            <th>Difficulty</th>
                            <th>Topics</th>
                            <th class="pe-4 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="questionsTable">
                        <% for(let question of allQuestion) { %>
                        <tr class="question-row" data-tags="<%= question.tags.join(',').toLowerCase() %>">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 text-primary">
                                        <i class="fas fa-laptop-code fs-5"></i>
                                    </div>
                                    <div>
                                        <h3 class="h6 fw-bold mb-1"><%= question.title %></h3>
                                        <p class="text-muted small mb-0"><%= question.description.substring(0, 70) %>...</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge <%= 
                                    question.difficulty === 'Easy' ? 'bg-success bg-opacity-10 text-success' : 
                                    question.difficulty === 'Medium' ? 'bg-warning bg-opacity-10 text-warning' : 
                                    'bg-danger bg-opacity-10 text-danger' %> rounded-pill px-3 py-1">
                                    <%= question.difficulty %>
                                </span>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    <% question.tags.slice(0, 3).forEach(tag=> { %>
                                    <span class="badge bg-light text-dark border rounded-pill px-2 py-1 small">
                                        <%= tag %>
                                    </span>
                                    <% }) %>
                                    <% if (question.tags.length > 3) { %>
                                    <span class="badge bg-light text-dark border rounded-pill px-2 py-1 small">
                                        +<%= question.tags.length - 3 %> more
                                    </span>
                                    <% } %>
                                </div>
                            </td>
                            <td class="pe-4 text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/dsa/<%=question._id%>/detail" class="btn btn-outline-primary rounded-start-pill px-3">
                                        <i class="far fa-eye me-1"></i> View
                                    </a>
                                    <a href="/dsa/<%=question._id%>/detail" class="btn btn-outline-success px-3">
                                        <i class="fas fa-code me-1"></i> Solve
                                    </a>
                                    <%if(currentUser && currentUser.role==="admin"){%>
                                    <a href="/dsa/<%=question._id%>/delete" class="btn btn-outline-danger rounded-end-pill px-3">
                                        <i class="far fa-trash-alt me-1"></i>
                                    </a>
                                    <%}%>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script>
        function searchByTag() {
            const searchInput = document.getElementById('tagSearchInput');
            const searchTerm = searchInput.value.toLowerCase().trim();
            const questionRows = document.querySelectorAll('.question-row');
            let visibleCount = 0;

            questionRows.forEach(row => {
                const tags = row.getAttribute('data-tags');
                if (tags.includes(searchTerm) || searchTerm === '') {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('questionCount').textContent = visibleCount;
            document.getElementById('searchStatus').textContent = 
                searchTerm ? `Showing questions tagged with: ${searchTerm}` : 'Showing all questions';
        }

        // Add event listener for Enter key
        document.getElementById('tagSearchInput').addEventListener('keyup', function(event) {
            if (event.key === 'Enter') {
                searchByTag();
            }
        });
    </script>
</body>
