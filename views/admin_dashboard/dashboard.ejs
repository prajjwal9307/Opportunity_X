        background: white;
        color: #667eea;
        border: none;
        border-radius: 0.6vw;
        padding: 1.2vh 2vw;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.2vw;
    }
    
    .notification-btn:hover {
        background: #f5f5f5;
        transform: translateY(-0.2vh);
        box-shadow: 0 0.5vh 1vw rgba(0, 0, 0, 0.1);
    }
    
    /* Responsive Styles */
    @media(max-width:990px) {
        .container {
            justify-content: center;
        }
        
        .stat-card {
            width: 30vw;
        }
        
        .status {
            width: 30vw;
        }
        
        .stat-info h3 {
            font-size: 3.5vw;
        }
        
        .stat-info p {
            font-size: 1.8vw;
        }
        
        .status h4 {
            font-size: 2.2vw;
        }
        
        .status p {
            font-size: 3.5vw;
        }
    }
    
    @media(max-width:700px) {
        .mobile-toggle-btn {
            display: flex;
            position: fixed;
            top: 7vh;
            left: 0;
        }
        
        .option {
            margin-left: -50vw;
            position: fixed;
            transition: all 0.3s ease-out;
            height: 100vh;
            width: 50vw;
            font-size: 4vw;
        }
        
        .option.active {
            margin-left: 0;
            transition: all 0.3s ease;
        }
        
        .sidebar-header h2 {
            font-size: 5vw;
        }
        
        .option a i {
