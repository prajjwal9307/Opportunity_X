    }
    
    .shortlisted {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
    }
    
    /* Notification Section */
    .notification-section {
        margin: 3vh 1vh;
    }
    
    .notification-section h2 {
        font-size: 2vw;
        color: #2d3748;
