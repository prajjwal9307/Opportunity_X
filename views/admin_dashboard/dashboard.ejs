        }
        
        .container {
            justify-content: center;
            padding-top: 2vh;
        }
        
        .stat-card {
            width: 80vw;
            margin-bottom: 2vh;
        }
        
        .stat-icon {
            font-size: 8vw;
            height: 12vw;
        }
        
        .stat-info h3 {
            font-size: 8vw;
        }
        
        .stat-info p {
            font-size: 4vw;
        }
        
        .status-section h3 {
