<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= company.companyname %> Applications
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .application-card {
            transition: all 0.3s ease;
            margin-bottom: 20px;
            border-left: 4px solid #0d6efd;
        }

        .application-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .badge-pending {
            background-color: #ffc107;
            color: #000;
        }

        .badge-approved {
            background-color: #198754;
        }

        .badge-rejected {
            background-color: #dc3545;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <%= company.companyname %> - <%= company.jobrole %>
                        <span class="badge bg-primary">
                            <%= company.applications.length %> Applications
                        </span>
            </h1>
            <a href="/admin/jobapplication" class="btn btn-outline-secondary">
                Back to Dashboard
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Drive Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p><strong>Package:</strong> â‚¹<%= company.package %> LPA</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Drive Date:</strong>
                            <%= company.drivedate.toLocaleDateString() %>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Deadline:</strong>
                            <%= company.applicationdeadline.toLocaleDateString() %>
                        </p>
                    </div>
                </div>
                <div class="mt-3">
                    <strong>Required Skills:</strong>
                    <% company.skills.forEach(skill=> { %>
                        <span class="badge bg-secondary me-1">
                            <%= skill %>
                        </span>
                        <% }); %>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Student Applications</h5>
                    <div>
                        <span class="badge badge-pending me-1">Pending</span>
                        <span class="badge badge-approved me-1">Approved</span>
                        <span class="badge badge-rejected">Rejected</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <% if (company.applications.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Student</th>
                                    <th>University ID</th>
                                    <th>Program</th>
                                    <th>CGPA</th>
                                    <th>Status</th>
                                    <th>Resume</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% company.applications.forEach(application=> { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <i class="bi bi-person-circle fs-4"></i>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">
                                                        <%= application.fullName %>
                                                    </h6>
                                                    <small class="text-muted">
                                                        <%= application.email %>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <%= application.universityId %>
                                        </td>
                                        <td>
                                            <%= application.degreeProgram %>
                                                <br>
                                                <small class="text-muted">
                                                    <%= application.branch %>
                                                </small>
                                        </td>
                                        <td>
                                            <%= application.cgpa %>
                                        </td>
                                        <td>
                                            <form action="/admin/jobapplication/<%= application._id %>/status"
                                                method="POST" class="d-inline">
                                                <select name="status" class="form-select form-select-sm"
                                                    onchange="this.form.submit()">
                                                    <option value="pending" <%=application.status==='pending'
                                                        ? 'selected' : '' %>>Pending</option>
                                                    <option value="shortlisted" <%=application.status==='shortlisted'
                                                        ? 'selected' : '' %>>Shortlisted</option>
                                                    <option value="rejected" <%=application.status==='rejected'
                                                        ? 'selected' : '' %>>Rejected</option>
                                                    <option value="selected" <%=application.status==='selected'
                                                        ? 'selected' : '' %>>Selected</option>
                                                </select>
                                            </form>
                                            <small class="text-muted d-block">
                                                <% if (application.statusUpdatedAt) { %>
                                                    <%= new Date(application.statusUpdatedAt).toLocaleString() %>
                                                        <% } %>
                                            </small>
                                        </td>
                                        <td>
                                            <a href="<%=application.resume.url%>"
                                                class="btn btn-sm btn-outline-primary">
                                                Resume
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/admin/application/<%= application._id %>/student_details"
                                                class="btn btn-sm btn-outline-primary">
                                                View Details
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            No applications received yet for this drive.
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"></script>
</body>

</html>