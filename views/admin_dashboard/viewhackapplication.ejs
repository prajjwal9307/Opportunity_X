<%layout("layout/placement/boilerplate.ejs")%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .hackathon-header {
            background: linear-gradient(135deg, #6c63ff, #4d44db);
            color: white;
            border-radius: 10px;
        }
        .skill-badge {
            background-color: #e0e0ff;
            color: #4d44db;
            padding: 0.3rem 0.8rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 500;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            display: inline-block;
        }
        .team-table {
            font-size: 0.9rem;
        }
        .team-table th {
            background-color: #f8f9fa;
            position: sticky;
            top: 0;
        }
        .table-container {
            max-height: 600px;
            overflow-y: auto;
        }
        .contact-badge {
            cursor: pointer;
            transition: all 0.2s;
        }
        .contact-badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
    </style>
</head>

<body>
    <div class="container py-4">
        <!-- Hackathon Details Section -->
        <div class="hackathon-header p-4 mb-4 shadow">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-1"><i class="fas fa-laptop-code me-2"></i><%=hack.title%></h1>
                    <p class="lead mb-0"><%=hack.theme%></p>
                </div>
                <span class="badge bg-light text-dark fs-6">
                    <i class="fas fa-users me-1"></i><%=hack.group_member%>
                </span>
            </div>

            <hr class="my-3 bg-light">

            <div class="row">
                <div class="col-md-4">
                    <p><i class="fas fa-calendar-day me-2"></i> <strong>Date:</strong> 
                        <%= new Date(hack.date).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %>
                    </p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> <strong>Venue:</strong> <%=hack.venue || 'Online'%></p>
                </div>
                <div class="col-md-4">
                    <p><i class="fas fa-tag me-2"></i> <strong>Type:</strong> <%=hack.type%></p>
                    <p><i class="fas fa-clock me-2"></i> <strong>Duration:</strong> <%=hack.duration || '24 Hours'%></p>
                </div>
                <div class="col-md-4">
                    <p><strong>Skills:</strong></p>
                    <div>
                        <% if(hack.skills && Array.isArray(hack.skills) && hack.skills.length > 0) { %>
                            <% hack.skills.forEach(skill=> { %>
                                <span class="skill-badge"><%= skill %></span>
                            <% }); %>
                        <% } else { %>
                            <span class="text-muted">No skills specified</span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a href="/admin/hackapplication" class="btn btn-outline-secondary mb-3">
                Back to Dashboard
            </a>
        </div>

        <!-- Registered Teams Table -->
        <div class="card shadow mb-4">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Registered Teams</h5>
                    <span class="badge bg-primary">
                        <% if(hack.regiterteam && hack.regiterteam.length) { %>
                            <%= hack.regiterteam.length %> Teams
                        <% } else { %>
                            0 Teams
                        <% } %>
                    </span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-container">
                    <% if(hack.regiterteam && hack.regiterteam.length) { %>
                        <table class="table table-hover team-table mb-0">
                            <thead>
                                <tr>
                                    <th width="50">#</th>
                                    <th>Team Name</th>
                                    <th>Leader</th>
                                    <th>Contact</th>
                                    <th>Members</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% hack.regiterteam.forEach((team, index) => { %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><strong><%= team.teamName %></strong></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-crown text-warning me-2"></i>
                                                <%= team.leaderName %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-wrap">
                                                <% if(team.leaderEmail) { %>
                                                    <a href="mailto:<%= team.leaderEmail %>" class="badge bg-light text-dark contact-badge me-2 mb-1" 
                                                       title="Email leader">
                                                        <i class="fas fa-envelope me-1"></i>Email
                                                    </a>
                                                <% } %>
                                                <% if(team.leaderContact) { %>
                                                    <a href="tel:<%= team.leaderContact %>" class="badge bg-light text-dark contact-badge mb-1" 
                                                       title="Call leader">
                                                        <i class="fas fa-phone me-1"></i>Call
                                                    </a>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if(team.teamMembers && team.teamMembers.length) { %>
                                                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" 
                                                    data-bs-target="#membersModal<%=index%>">
                                                    <i class="fas fa-users me-1"></i>View (<%= team.teamMembers.length %>)
                                                </button>
                                                
                                                <!-- Members Modal -->
                                                <div class="modal fade" id="membersModal<%=index%>" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Team Members - <%= team.teamName %></h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <ul class="list-group">
                                                                    <% team.teamMembers.forEach(member => { %>
                                                                        <li class="list-group-item">
                                                                            <i class="fas fa-user me-2"></i><%= member %>
                                                                        </li>
                                                                    <% }); %>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">No members</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/admin/application/<%= team._id %>/team_details" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                            <h5>No teams registered yet</h5>
                            <p class="text-muted">There are currently no teams registered for this hackathon</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>