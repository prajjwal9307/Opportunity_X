                font-size: 1.8rem;
            }

            .first-img p {
                font-size: 1.2rem;
                transform: translate(1rem, 2rem);
            }

            .first-img img {
                max-width: 100%;
                height: auto;
            }

            .second {
                padding: 1.5rem;
            }

            .second-part1 h1 {
                font-size: 1.5rem;
                text-align: center;
            }

            .second-part1-part1 {
                height: auto;
                flex-wrap: wrap;
                padding: 0.5rem;
                border-radius: 15px;
            }

            .second-part1-part1 ul {
                flex-wrap: wrap;
                justify-content: center;
                gap: 0.5rem;
            }

            .second-part1-part1 ul a {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

            .second-part2 {
                flex-direction: column;
                gap: 2rem;
            }

            .second-part2-box1 {
                display: none;
            }

            .second-part2-box2 {
                width: 100% !important;
                height: auto;
                padding: 1.5rem;
            }

            .box1-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .image-container {
                flex-direction: column;
            }

            .image-wrapper {
                margin-bottom: 1rem;
            }

            .image {
                height: 10rem;
            }

            .third {
                padding: 1.5rem;
            }

            .third h1 {
                font-size: 1.8rem;
            }

            .third .lead {
                font-size: 1rem;
            }

            .third-img {
                height: 18rem;
                width: 14rem;
                min-width: 14rem;
            }

            .footer {
                flex-direction: column;
                text-align: center;
                padding: 1rem;
                position: relative;
            }

            .footer-left,
            .footer-right {
                margin-bottom: 0.5rem;
            }

            .footer a {
                margin: 0 0.5rem;
                display: inline-block;
            }
        }
    </style>
    <script>
        // Feature data
        const featureData = {
            ai: {
                title: "Explore AI Tools for Resume Building",
                subtitle: "AI-Powered Assistance",
                desc: [
                    "Get resume analysis with AI.",
                    "Get resume ATS score.",
                    "Enhance resume with AI suggestions."
                ],
                images: ["/img/ai2.png", "/img/ai3.jpg", "/img/ai4.png"]
            },
            company: {
                title: "Just one click to view company details...",
                subtitle: "Upcoming Drives",
                desc: [
                    "Explore top companies hiring from campus.",
                    "Stay updated with recruitment drives.",
                    "Know eligibility and roles offered."
                ],
                images: ["/img/amazon.jpg", "/img/microsoft.jpg", "/img/google.jpg"]
            },
            hackathon: {
                title: "Hackathon Opportunities",
                subtitle: "Compete & Collaborate",
                desc: [
                    "Join national-level hackathons.",
                    "Win exciting prizes and internships.",
                    "Build projects with peers."
                ],
                images: ["/img/hack1.jpg", "/img/hack2.jpg", "/img/hack3.jpg"]
            },
            dsa: {
                title: "Master Data Structures & Algorithms",
                subtitle: "Coding Preparation",
                desc: [
                    "Practice most asked DSA questions.",
                    "Solve timed coding challenges.",
                    "Track your progress online."
                ],
                images: ["/img/dsa1.jpg", "/img/dsa2.jpg", "/img/dsa3.jpg"]
            },
            experience: {
                title: "Student Placement Experiences",
                subtitle: "From Alumni",
                desc: [
                    "Read real interview stories.",
                    "Learn common questions asked.",
                    "Get tips from successful seniors."
                ],
                images: ["/img/exp1.jpg", "/img/exp2.jpg", "/img/exp3.jpg"]
            },
            education: {
                title: "Learning & Training Resources",
                subtitle: "Prepare Smarter",
                desc: [
                    "Access study material and notes.",
                    "Enroll in placement workshops.",
                    "Get certified with online courses."
                ],
                images: ["/img/edu1.jpg", "/img/edu2.jpg", "/img/edu3.jpg"]
            },
            about: {
                title: "About Our Training & Placement Cell",
                subtitle: "Who We Are",
                desc: [
                    "Connecting students with recruiters.",
                    "Building skills for better employability.",
                    "Achieving high placement rates yearly."
                ],
                images: ["/img/tpo1.jpg", "/img/tpo2.jpg", "/img/tpo3.jpg"]
            }
        };

        // Handle tab clicks
        document.querySelectorAll('.second-part1-part1 ul a').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();

                // remove "active" from all
                document.querySelectorAll('.second-part1-part1 ul a')
                    .forEach(l => l.classList.remove('active'));

                // add "active" to the clicked one
                this.classList.add('active');

                // get clicked section (by text)
                const section = this.textContent.trim().toLowerCase();
                const data = featureData[section];

                if (data) {
                    // update left box (title + images)
                    document.querySelector('.second-part2-box1 h2').textContent = data.title;

                    const imgContainer = document.querySelector('.second-part2-box1 .d-flex');
                    imgContainer.innerHTML = "";
                    data.images.forEach(src => {
                        imgContainer.innerHTML += `<div class="image"><img src="${src}" alt=""></div>`;
                    });

                    // update right box (subtitle + descs)
                    document.querySelector('.second-part2-box2 h2').textContent = data.subtitle;
                    const pTags = document.querySelectorAll('.second-part2-box2 p');
                    pTags.forEach((p, i) => {
                        p.textContent = data.desc[i] || "";
                    });
                }
            });
        });

        // default load (company section active)
        document.querySelector('.second-part1-part1 ul a:nth-child(2)').click();
    </script>