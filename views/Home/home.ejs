    <style>
        body {
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
            color: #0D1216;
            padding: 0.3rem 0.3rem;
            border-radius: 5px;

        }

        a:hover {
            background-color: rgb(241, 240, 240);
        }

        main {
            background: linear-gradient(to bottom, #FAE8E0, #CFD6C2, #FFFFFF);
            margin: 0;
            min-height: 100vh;
        }

        .first {
            display: flex;
            padding: 3rem;
            justify-content: space-evenly;
            max-height: 30rem;
            flex-wrap: wrap;
        }

        .first-text {
            display: flex;
            flex-direction: column;
            padding-top: 3rem;
            gap: 2rem;
        }

        .first-img {
            position: relative;
            display: inline-block;
        }


        .first-img p {
            position: absolute;
            top: 0%;
            left: 0%;
            transform: translate(3rem, 4rem);
            color: white;
            background-color: rgba(73, 63, 253, 0.5);
            font-size: 2rem;
        }

        .first-img img {
            max-height: 600px;
            max-width: 600px;
            border-radius: 1rem;
        }

        .second {
            padding: 3rem;
        }

        .second-part1-part1 {
            display: flex;
            background-color: #dde5cf;
            border-radius: 30px;
            height: 4rem;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-top: 2rem;
        }

        .second-part1-part1 ul {
            gap: 1rem;
            margin: 0;
            padding: 0;
        }

        .second-part1-part1 ul a {
            text-decoration: none;
            color: black;
            padding: 1rem 1.5rem;
            /* same padding for all */
            border-radius: 30px;
            display: block;
            /* fixes vertical alignment */
        }

        /* Active state */
        .second-part1-part1 ul a.active {
            background: linear-gradient(to right, #EF7C8E, #FAE8E0, #B6E2D3);
        }

        /* Second Part2 */
        .second-part2 {
            padding-top: 3rem;
        }

        .second-part2-box1 {
            background: linear-gradient(#EF7C8E, #FAE8E0);
            height: 30rem;
            border-radius: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
        }

        .second-part2-box2 {
            background: linear-gradient(#FEDE00, #C8DF52);
            height: 30rem;
            border-radius: 1rem;
            padding: 1rem;
            padding-top: 4rem;
        }

        .image {
            height: 12rem;
            width: 12rem;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;

        }

        .image img {
            height: 100%;
            width: 100%;
            object-fit: cover;
            border-radius: 1rem;
        }

        .second-part2-box2 p {
            font-weight: 500;
            background-color: rgba(178, 255, 174, 0.5);
        }

        /*Third*/
        .third {
            padding: 3rem;
        }

        .third h1 {
            font-weight: 700;
        }

        .third-container {
            overflow-x: auto;
            gap: 1.5rem;
            padding-bottom: 1rem;
            scrollbar-width: thin;
        }

        .third-container::-webkit-scrollbar {
            height: 8px;
        }

        .third-container::-webkit-scrollbar-thumb {
            background: #aaa;
            border-radius: 10px;
        }

        .third-img {
            height: 23rem;
            width: 18rem;
            min-width: 18rem;
            border-radius: 1rem;
            background: linear-gradient(#B6E2D3, #FAE8E0);
            padding: 1rem;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .third-img h3 {
            margin-bottom: 1rem;
        }

        .third-img p {
            font-size: 0.95rem;
            color: #333;
        }

        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: white;
            color: black;
            padding: 0.8rem 2rem;
            font-size: 0.9rem;
            z-index: 1000;
        }

