<%layout("layout/placement/boilerplate.ejs")%>

<body class="bg-light">
    <!-- Header Section -->
    <div class="bg-white shadow-sm py-4 mb-4">
        <div class="container">
            <div class="text-center">
                <h2 class="mb-2 fw-bold text-primary">Create Job Listing</h2>
                <p class="text-muted mb-0">Fill out the form to post a new job opportunity</p>
            </div>
        </div>
    </div>

    <!-- Main Form -->
    <div class="container">
        <div class="card shadow-sm border-0 mx-auto" style="max-width: 800px;">
            <div class="card-body p-4">
                <form id="jobListingForm" action="/placementdrive/listing" method="POST" class="needs-validation myForm" novalidate>
                    
                    <!-- Company Information Section -->
                    <section class="mb-5">
                        <h3 class="h5 mb-4 text-primary border-bottom pb-2">
                            <i class="fas fa-building me-2"></i>Company Information
                        </h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="companyname" class="form-label">Company Name <span class="text-danger">*</span></label>
                                <input type="text" name="companyname" class="form-control" id="companyname" required>
                                <div class="invalid-feedback">
                                    Please provide the company name.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="companydetail" class="form-label">Company Details <span class="text-danger">*</span></label>
                                <textarea name="companydetail" class="form-control" id="companydetail" rows="3" required></textarea>
                                <div class="invalid-feedback">
                                    Please describe the company.
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Job Details Section -->
                    <section class="mb-5">
                        <h3 class="h5 mb-4 text-primary border-bottom pb-2">
                            <i class="fas fa-briefcase me-2"></i>Job Details
                        </h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="jobrole" class="form-label">Job Role <span class="text-danger">*</span></label>
                                <input type="text" name="jobrole" class="form-control" id="jobrole" required>
                                <div class="invalid-feedback">
                                    Please specify the job position.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="eligibility" class="form-label">Eligibility Criteria <span class="text-danger">*</span></label>
                                <input type="text" name="eligibility" class="form-control" id="eligibility" required>
                                <div class="invalid-feedback">
                                    Please specify eligibility criteria.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="skills" class="form-label">Required Skills <span class="text-danger">*</span></label>
                                <input type="text" name="skills" class="form-control" id="skills" required>
                                <div class="invalid-feedback">
                                    Please list required skills.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="package" class="form-label">Package (LPA) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="number" name="package" class="form-control" id="package" min="0" step="0.01" required>
                                    <span class="input-group-text">LPA</span>
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid package amount.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="applicationdeadline" class="form-label">Application Deadline <span class="text-danger">*</span></label>
                                <input type="date" name="applicationdeadline" class="form-control" id="applicationdeadline" required>
                                <div class="invalid-feedback">
                                    Please select a deadline date.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="processofround" class="form-label">Hiring Process <span class="text-danger">*</span></label>
                                <input type="text" name="processofround" class="form-control" id="processofround" required>
                                <div class="invalid-feedback">
                                    Please describe the hiring process.
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Placement Drive Information -->
                    <section class="mb-4">
                        <h3 class="h5 mb-4 text-primary border-bottom pb-2">
                            <i class="fas fa-calendar-alt me-2"></i>Placement Drive Information
                        </h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="drivedate" class="form-label">Drive Date <span class="text-danger">*</span></label>
                                <input type="date" name="drivedate" class="form-control" id="drivedate" required>
                                <div class="invalid-feedback">
                                    Please select a drive date.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="venue" class="form-label">Venue <span class="text-danger">*</span></label>
                                <input type="text" name="venue" class="form-control" id="venue" required>
                                <div class="invalid-feedback">
                                    Please provide the venue address.
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Form Submission -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="reset" class="btn btn-outline-secondary me-md-2 ">
                            <i class="fas fa-times me-1"></i> Reset
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-1"></i> Submit Job Listing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/form_valid.js"></script>
</body>
