<%layout("layout/placement/boilerplate.ejs")%>

    <body class="bg-light">
        <!-- Header Section -->
        <div class="bg-primary text-white py-4 shadow-sm">
            <div class="container">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building fa-2x me-3"></i>
                    <div>
                        <h1 class="h2 mb-1">Placement Companies</h1>
                        <p class="mb-0 opacity-75">Browse and apply to top companies visiting our campus</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container py-4">
            <!-- Sorting Controls -->
            <div class="d-flex justify-content-end mb-4">
                <div class="btn-group" role="group">
                    <a href="/placementdrive?sort=asc&page=1"
                        class="btn btn-outline-primary <%= sortOrder === 'asc' ? 'active' : '' %>">
                        <i class="fas fa-sort-amount-down-alt me-2"></i>Low to High
                    </a>
                    <a href="/placementdrive?sort=desc&page=1"
                        class="btn btn-outline-primary <%= sortOrder === 'desc' ? 'active' : '' %>">
                        <i class="fas fa-sort-amount-down me-2"></i>High to Low
                    </a>
                </div>
            </div>

            <!-- Companies Table -->
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <% if (currentUser && currentUser.role==="admin" ) { %>
                                    <th width="50">Action</th>
                                    <% } %>
                                        <th width="60">Sr</th>
                                        <th>Company Name</th>
                                        <th>Job Role</th>
                                        <th>Package (LPA)</th>
                                        <th>Eligibility</th>
                                        <th width="220">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allcompany.forEach((listing, index)=> { %>
                                <tr>
                                    <!-- Delete Button -->
                                    <% if (currentUser && currentUser.role==="admin" ) { %> 
                                        <td>
                                            <form action="/placementdrive/<%= listing._id %>?_method=DELETE"
                                                method="POST" class="d-inline">
                                                <button type="submit"
                                                    onclick="return confirm('Are you sure you want to delete this drive?')"
                                                    class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                        <% } %>


                                            <!-- Serial Number -->
                                            <td class="fw-bold">
                                                <%= index + 1 %>
                                            </td>

                                            <!-- Company Name -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="ms-2">
                                                        <h6 class="mb-0 fw-bold">
                                                            <%= listing.companyname %>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Job Role -->
                                            <td><span class="badge bg-info bg-opacity-10 text-info">
                                                    <%= listing.jobrole %>
                                                </span></td>

                                            <!-- Package -->
                                            <td class="fw-bold text-success">
                                                <%= listing.package %> LPA
                                            </td>

                                            <!-- Eligibility -->
                                            <td><small class="text-muted">
                                                    <%= listing.eligibility %>
                                                </small></td>

                                            <!-- Action Buttons -->
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a href="placementdrive/<%= listing._id %>"
                                                        class="btn btn-sm btn-primary flex-grow-1">
                                                        <i class="fas fa-paper-plane me-1"></i> Apply
                                                    </a>
                                                    <% if (currentUser && currentUser.role==="admin" ) { %>
                                                        <form action="/placementdrive/<%= listing._id %>/edit"
                                                            method="GET" class="d-inline flex-grow-1">
                                                            <button type="submit"
                                                                class="btn btn-sm btn-outline-secondary w-100">
                                                                <i class="fas fa-edit me-1"></i> Edit
                                                            </button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                            </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </body>

    </html>