<%layout("layout/placement/boilerplate.ejs")%>

    <body class="bg-light">
        <!-- Header Section -->
        <header class="bg-white shadow-sm sticky-top py-3">
            <div class="container">
                <div class="d-flex align-items-center">
                    <a href="/placementdrive" class="btn btn-outline-secondary me-3">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="h4 mb-0 text-primary">
                            <i class="fas fa-building me-2"></i>
                            <%= companydetails.companyname %>
                        </h1>
                        <p class="mb-0 text-muted">
                            Hiring for <span class="text-decoration-underline fw-bold">
                                <%= companydetails.jobrole %>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="container py-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Company Details -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-info-circle fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Company Overview</h3>
                                    <p class="mb-0">
                                        <%= companydetails.companydetail %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Job Details -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-briefcase fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Job Role</h3>
                                    <p class="mb-0">
                                        <%= companydetails.jobrole %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Package -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-money-bill-wave fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Package</h3>
                                    <p class="mb-0"><span class="badge bg-success">
                                            <%= companydetails.package %> LPA
                                        </span></p>
                                </div>
                            </div>
                        </div>

                        <!-- Eligibility -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-graduation-cap fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Eligibility Criteria</h3>
                                    <p class="mb-0">
                                        <%= companydetails.eligibility %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Deadline -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-clock fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Application Deadline</h3>
                                    <p class="mb-0">
                                        <%= new Date(companydetails.applicationdeadline).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Skills -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-code fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Required Skills</h3>
                                    <p class="mb-0">
                                        <%= companydetails.skills %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Hiring Process -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-list-ol fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Hiring Process</h3>
                                    <p class="mb-0">
                                        <%= companydetails.processofround %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Drive Date -->
                        <div class="col-md-6">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-calendar-day fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Drive Date</h3>
                                    <p class="mb-0">
                                        <%= new Date(companydetails.drivedate).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Venue -->
                        <div class="col-12">
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-map-marker-alt fa-lg"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-1">Venue</h3>
                                    <p class="mb-0">
                                        <%= companydetails.venue %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Apply Button -->
            <div class="text-center">
                <a href="/placementdrive/<%= companydetails._id %>/apply" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-paper-plane me-2"></i>Apply Now
                </a>
            </div>
        </div>

    </body>

    </html>