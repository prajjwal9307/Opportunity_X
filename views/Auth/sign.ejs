<% layout("layout/placement/boilerplate.ejs") %>

  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow-lg rounded-4">
            <div class="card-body p-4">
              <h3 class="text-center mb-4">Sign Up</h3>
              <form action="/signup" method="POST" novalidate class="needs-validation">

                <!-- Username -->
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" id="username" name="username" class="form-control"
                    placeholder="Enter your username" required>
                </div>

                <!-- Gmail -->
                <div class="mb-3">
                  <label for="gmail" class="form-label">Gmail</label>
                  <input type="email" id="gmail" name="email" class="form-control"
                    placeholder="Enter your Gmail address" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                    placeholder="Enter your password" required>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary btn-lg">
                    Sign Up
                  </button>
                </div>
              </form>
              <div class="text-center mt-3">
                <a href="/auth/google" class="btn btn-danger w-100">
                  <i class="fab fa-google me-2"></i> Continue with Google
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/form_valid.js"></script>
  </body>